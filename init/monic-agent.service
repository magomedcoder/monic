[Unit]
Description=Monic agent
After=network-online.target
Wants=network-online.target

[Service]
User=root
Group=root
ExecStart=/usr/local/bin/monic-agent
Environment=MONIC_WEBHOOK_URL=http://127.0.0.1/webhook
Environment=MONIC_SHARED_SECRET=secret
Environment=MONIC_JOURNAL_UNIT=sshd.service
Environment=MONIC_STATE_DIR=/var/lib/monic-agent
Restart=on-failure
RestartSec=5s
StateDirectory=monic-agent

[Install]
WantedBy=multi-user.target